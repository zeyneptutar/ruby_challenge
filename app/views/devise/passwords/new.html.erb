
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>
<h3 style="text-align:center;">Forgot your password?</h3>

  <div class="form-group">
    <label class="col-sm-4 control-label">Email:</label>
    <div class="col-sm-4">
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Email'%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-success btn-sm' %>
    </div>
  </div> 
<% end %>

<div class="col-sm-offset-4 col-sm-4">
  <%= render "devise/shared/links" %>
</div>

